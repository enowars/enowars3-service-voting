version: "2"
services:
  nginx:
    build: ./nginx
    volumes:
      - ./app/www:/usr/share/nginx/html/
    ports:
      - "80:80"
    depends_on:
      - gunicorn
	networks:
    	default:
        checkernet:
            ipv6_address: fd00:1337:0:cecc::1
  gunicorn:
    build: ./gunicorn
    volumes:
      - ./app:/app
networks:
    checkernet:
        external: true
